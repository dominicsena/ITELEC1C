@{
}
@model Student;
<body>
    <div class="main-container">
        <div asp-validation-summary="All" class="text-danger"> </div>
        <h2 id="HDR" style="font-size: 40px; color: #d17724; font-weight: lighter; text-align: center;">Student Registration</h2>
        <div class="container">
            <div style="text-align:center">

                Add a new Student

            </div>
            <form asp-action="AddStudent" asp-controller="Student" method="post">

                <div class="form-group">

                    <label asp-for="StudentId"></label>
                    <input asp-for="StudentId" class="form-control" id="StudentId" placeholder="Enter Student ID" />

                </div>

                <div class="form-group">

                    <label asp-for="StudentName"></label>
                    <input asp-for="StudentName" class="form-control" id="StudenName" placeholder="Enter Student's Name" />

                </div>

                <div class="form-group">

                    <label asp-for="Course"></label>
                    <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control" id="Course" placeholder="Enter your Course"> </select>



                </div>

                <div class="form-group">

                    <label asp-for="DateEnrolled"></label>
                    <input asp-for="DateEnrolled" class="form-control" id="DateEnrolled" placeholder="DateEnrolled" />

                </div>


                <div class="form-group">

                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your Email" />

                </div>

                <br />

                <div style="text-align: center;">

                    <button type="submit" class="btn btn-primary">

                        Submit

                    </button>

                    <button type="button" onclick="history.back();" class="btn btn-primary">

                        Cancel

                    </button>

                </div>



            </form>

        </div>

    </div>
</body>
