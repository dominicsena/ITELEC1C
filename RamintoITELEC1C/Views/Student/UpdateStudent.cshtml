@{
}
@model Student;


<h2>Update Student</h2>


<form method="post" asp-action="UpdateStudent" asp-controller="Student" class='p-2 row gx-3 gy-2 align-items-center'>
    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" asp-for="StudentName" />
    </div>
    
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" asp-for="Email" />
    </div>
    
    <div class="form-group">
        <label class="input-group-text" asp-for="Course"></label>
        <select asp-for="Course" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Course))" asp-for="Course">
        </select>

    </div>
    <div class=" form-group">
        <label asp-for="DateEnrolled"></label>
        <input asp-for="DateEnrolled" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary p-20">Submit</button>

</form>