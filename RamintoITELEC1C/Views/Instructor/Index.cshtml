@model IEnumerable<RamintoITELEC1C.Models.Instructor>
@{
    //using for each loop
}

<h1> Instructor List</h1>

<table class="table table-light">
    <tr>

        <th>First Name</th>
        <th>Last Name </th>
        <th>Tenured</th>
        <th>Rank</th>
        <th>More Details</th>
    </tr>
    @foreach (var Instructor in Model)
    {
        <tr>
            <td>@Instructor.InstructorFirstName</td>
            <td>@Instructor.InstructorLastName</td> 
            <td>@Instructor.IsTenured</td>
            <td>@Instructor.Rank</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.InstructorId">Show Details</a></td>


        </tr>
        
    }
</table>