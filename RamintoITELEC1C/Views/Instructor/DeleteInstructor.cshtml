@model Instructor;

<h2>Delete Instructor</h2>


<form method="post" asp-action="DeleteInstructor" asp-controller="Instructor" class='p-2 row gx-3 gy-2 align-items-center'>
    <div class="form-group">
        <label asp-for="InstructorFirstName">First Name</label>
        <input asp-for="InstructorFirstName" class="form-control" asp-for="InstructorFirstName" readonly />
    </div>
    <div class="form-group">
        <label asp-for="InstructorLastName">Last Name</label>
        <input asp-for="InstructorLastName" class="form-control" asp-for="InstructorLastName" readonly />
    </div>
    <div class="form-group">
        <label asp-for="InstructorEmail">Email</label>
        <input asp-for="InstructorEmail" class="form-control" asp-for="InstructorEmail" readonly />
    </div>
    <div class="form-group">
        <label class="input-group-text" asp-for="IsTenured">Tenured</label>
        <input asp-for="IsTenured" class="form-check-input" asp-for="IsTenured" readonly>

    </div>
    <div class="form-group">
        <label class="input-group-text" asp-for="Rank">Instructor Rank</label>
        <select asp-for="Rank" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Rank))" asp-for="Rank" readonly>
        </select>

    </div>
    <div class=" form-group">
        <label asp-for="HiringDate">Date Hired</label>
        <input asp-for="HiringDate" class="form-control" readonly />
    </div>

    <div style="text-align: center;">

        <button type="submit" class="btn btn-primary">Delete</button>

        <button type="button" onclick="history.back();" class="btn btn-primary">Back</button>

    </div>


</form>

